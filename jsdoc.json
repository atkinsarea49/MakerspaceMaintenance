{
    "source": {
        "include": ["README.md", "sendEmail.js", "makerspaceMachines.js", "package.json", "./tutorials"]
    },

    "opts": {
        "encoding": "utf8",
        "destination": "docs/",
        "readme": "./README.md",
        "recurse": true,
        "verbose": true,
        "template": "./node_modules/clean-jsdoc-theme",
        "templates" : {
            "default": {
                "staticFiles": {
                    "include" : [
                        "./tutorials"
                    ]
                }
            }
        },
        "theme_opts": {
            "default_theme": "dark",
            "homepageTitle": "Makerspace Maintenance Docs",
            "menu" : [
                {
                    "title" : "Multiselect Machine Functions",
                    "link": "{@tutorial multiselect}"
                },
                {
                    "title" : "Single Select Machine Functions",
                    "link" : "{@tutorial singleselect}"
                }
            ],
            "sections" : ["Tutorials","Namespaces","Global"],
            "tutorials": "./tutorials",
            "tags": {
                "dictionaries": ["jsdoc","closure"]
            },
            "plugins": ["plugins/markdown"],
            "markdown": {
                "tags": ["tutorials", "type"]
            }
            
        }
    },
    "markdown": {
        "hardwrap": false, 
        "idInHeadings": true 
    }
}