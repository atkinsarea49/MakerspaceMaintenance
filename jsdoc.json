{
    "source": {
        "include": ["src", "README.md", "package.json", "makerspaceMachines.js", "sendEmail.js", "/www", "/node_modules"]
    },

    "opts": {
        "encoding": "utf8",
        "destination": "docs/",
        "readme": "./README.md",
        "recurse": true,
        "verbose": true,
        "template": "./node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "default_theme": "dark",
            "homepageTitle": "Makerspace Maintenance Docs",
            "menu" : [
                {
                    "title" : "Multiselect Machine Functions",
                    "link": "{@tutorial multiselect}"
                },
                {
                    "title" : "Single Select Machine Functions",
                    "link" : "{@tutorial singleselect}"
                }
            ],
            "sections" : ["Tutorials","Namespaces","Global"]
            
        }
    },
    "markdown": {
        "hardwrap": false, 
        "idInHeadings": true 
    }
}